{
  "pluginAlias": "Shelly",
  "pluginType": "platform",
  "singular": true,
  "headerDisplay": "Homebridge plugin for Shelly devices",
  "footerDisplay": "",
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "default": "Shelly",
        "required": true,
        "description": "Plugin name as displayed in the homebridge log"
      },
      "username": {
        "title": "Username",
        "type": "string"
      },
      "password": {
        "title": "Password",
        "type": "string"
      },
      "admin": {
        "type": "object",
        "properties": {
          "enabled": {
            "title": "Enabled",
            "type": "boolean",
            "default": true
          },
          "port": {
            "title": "Port Number",
            "type": "integer",
            "maximum": 65353,
            "placeholder": 8181
          }
        }
      },
      "networkInterface": {
        "title": "Network Interface",
        "type": "string",
        "placeholder": "192.168.x.x",
        "description": "The local IP address of the network interface that should be used."
      },
      "requestTimeout": {
        "title": "Request Timeout",
        "type": "integer",
        "placeholder": 10000,
        "description": "The number of milliseconds before an HTTP request will time out."
      },
      "staleTimeout": {
        "title": "Stale Timeout",
        "type": "integer",
        "placeholder": 0,
        "description": "The number of milliseconds before an offline device will be removed. Set to 0 to disable."
      },
      "devices": {
        "type": "array",
        "items": {
          "title": "Device",
          "type": "object",
          "properties": {
            "id": {
              "title": "Device ID",
              "type": "string",
              "placeholder": "ABC123",
              "pattern": "^[A-Fa-f0-9]{6,12}$",
              "required": true
            },
            "name": {
              "title": "Name",
              "type": "string"
            },
            "type": {
              "title": "Accessory type",
              "type": "string",
              "typeahead": {
                "source": [
                  "colorLightbulb",
                  "colorTemperatureLightbulb",
                  "contactSensor",
                  "door",
                  "garageDoorOpener",
                  "motionSensor",
                  "occupancySensor",
                  "outlet",
                  "sensor",
                  "statelessSwitch",
                  "switch",
                  "valve",
                  "whiteLightbulb",
                  "window",
                  "windowCovering"
                ]
              }
            },
            "colorMode": {
              "title": "Color mode",
              "type": "string",
              "oneOf": [
                { "title": "RGB only", "enum": ["rgb"] },
                { "title": "RGBW", "enum": ["rgbw"] }
              ]
            },
            "username": {
              "title": "Username",
              "type": "string"
            },
            "password": {
              "title": "Password",
              "type": "string"
            },
            "exclude": {
              "title": "Exclude device",
              "type": "boolean"
            },
            "channels": {
              "title": "Channel configuration",
              "type": "object",
              "additionalProperties": {
                "type": "object",
                "properties": {
                  "name": {
                    "title": "Channel name",
                    "typeof": "string"
                  },
                  "exclude": {
                    "title": "Exclude channel",
                    "type": "boolean"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "form": [
    "name",
    {
      "type": "fieldset",
      "expandable": true,
      "title": "Authentication",
      "items": [
        {
          "type": "flex",
          "flex-flow": "row wrap",
          "items": [ "username", "password" ]
        }
      ]
    },
    {
      "type": "fieldset",
      "expandable": true,
      "title": "Administration Interface",
      "description": "",
      "items": [
        "admin.enabled",
        {
          "key": "admin.port",
          "condition": "admin.enabled"
        }
      ]
    },
    {
      "type": "fieldset",
      "expandable": true,
      "title": "Device Specific Configurations",
      "items": [
        {
          "key": "devices",
          "type": "array",
          "items": [
            "devices[].id",
            "devices[].name",
            "devices[].type",
            {
              "key": "devices[].colorMode",
              "condition": { "functionBody": "return model.devices && model.devices[arrayIndices[0]].type === 'colorLightbulb'" }
            },
            {
              "key": "devices[]",
              "type": "section",
              "title": "Authentication",
              "expandable": true,
              "items": [
                {
                  "type": "flex",
                  "flex-flow": "row wrap",
                  "items": [ "username", "password" ]
                }
              ]
            },
            "devices[].exclude"
          ]
        }
      ]
    },
    {
      "type": "fieldset",
      "expandable": true,
      "title": "Advanced Settings",
      "items": [
        "networkInterface",
        "requestTimeout",
        "staleTimeout"
      ]
    }
  ]
}
